@model IEnumerable<OnlineStore.Models.Product.Product>

@{
    ViewBag.Title = "Lista produktów";
}

<h2>Lista produktów</h2>

<p>
    @Html.ActionLink("Dodaj nowy produkt    ", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ProductCategory.CategoryName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProductName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProductDescription)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ProductCategory.CategoryName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ProductName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ProductDescription)
        </td>
        <td>
            @Html.ActionLink("Edytuj", "Edit", new { id=item.ProductId }) |
            @Html.ActionLink("Szczegóły", "Details", new { id=item.ProductId }) |
            @Html.ActionLink("Usuń", "Delete", new { id=item.ProductId })
        </td>
    </tr>
}

</table>
