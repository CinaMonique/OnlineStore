@model IEnumerable<OnlineStore.ViewModels.ProductSizes.SizeViewModel>

@{
    ViewBag.Title = "Lista rozmiarów";
}

<h2>Lista rozmiarów dla kategorii: @ViewBag.CategoryName </h2>

<p>
    @Html.ActionLink("Dodaj nowy rozmiar", "Create", new { categoryId = ViewBag.CategoryId })
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.SizeName)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SizeName)
            </td>
            <td>
                @Html.ActionLink("Usuń", "Delete", new { id = item.SizeId })
            </td>
        </tr>
    }

</table>

<div>
    @Html.ActionLink("Wróć do listy kategorii", "ShowCategories")
</div>  