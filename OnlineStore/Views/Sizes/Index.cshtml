@model IEnumerable<OnlineStore.Models.Product.Size>

@{
    ViewBag.Title = "Lista zdefiniowanych rozmiarów produktów";
}

<h2>Lista zdefiniowanych rozmiarów produktów</h2>

<p>
    @Html.ActionLink("Dodaj nowy rozmiar produktów", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ProductCategory.CategoryName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SizeName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SizeAmount)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ProductCategory.CategoryName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SizeName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SizeAmount)
        </td>
        <td>
            @Html.ActionLink("Edytuj", "Edit", new { id=item.SizeId }) |
            @Html.ActionLink("Szczegóły", "Details", new { id=item.SizeId }) |
            @Html.ActionLink("Usuń", "Delete", new { id=item.SizeId })
        </td>
    </tr>
}

</table>
