@model IEnumerable<OnlineStore.ViewModels.Administration.AdminViewModel>

@{
    ViewBag.Title = "Lista administratorów sklepu";
}

<h2 class="action-header">Lista administratorów sklepu</h2>

<p>
    @Html.ActionLink("Dodaj administratora", "Create")
</p>

@if (!Model.Any())
{
    <p class="inform-massage">Nie dodano żadnego administratora</p>
}
else
{
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UserName)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.UserName)
                </td>
                <td>
                    @Html.ActionLink("Usuń", "Delete", new { id = item.UserId })
                </td>
            </tr>
        }

    </table>
}
